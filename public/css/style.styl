body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  font-size 13px
  text-align left
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
a
  color: #00B7FF
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 60px
  margin-bottom 0.8em
.wrap
  width 1024px
  margin-left auto
  margin-right auto
.ctleft
    float left
    width 23%
  a.addButton
    float right
    padding 8px 20px
    background-color darkblue
    font-weight bold
    color white
    font-size 3em
    text-decoration none

.ctright
  float left
  width 72%
  margin-left 5%
#codolists
  text-align left
  .list
    padding 20px
    margin-bottom 10px
    background-color lightblue
    color white
    .created_at
        display none
    .title
        font-weight bold
        font-size 1.1em
    .name
        display none
.newlist
    padding 20px
    margin-bottom 10px
    background-color lightblue
    color white
  div
    display block
  input[type =text]
    width 200px
  input[type =button], input[type =submit]
    clear both
    text-align left
    display block
  .label
      width 50px
      margin-right 20px
      display block
      float left